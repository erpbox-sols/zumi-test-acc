<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_picking_form_inh_delivery_consignment" model="ir.ui.view">
        <field name="name">picking.form.inherit.delivery.consignment</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
        	<xpath expr="//h1" position="before">
        		<field name="delivery_receipt" invisible="1"/>
        		<h2 attrs="{'invisible': [('delivery_receipt', '!=', 'delivery')]}">
        			<strong>Delivery Consignment Note Certificate</strong>
        		</h2>
        		<h2 attrs="{'invisible': [('delivery_receipt', '!=', 'receipt')]}">
        			<strong>Receipt Consignment Note Certificate</strong>
        		</h2>
        	</xpath>
        </field>
    </record>

</odoo>
