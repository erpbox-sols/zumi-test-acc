<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sale_cost_update_form" model="ir.ui.view">
	     <field name="name">Update Product Cost</field>
	     <field name="model">product.cost.update</field>
	     <field name="arch" type="xml">
	         <form string="Update Product Cost">
	             <p class="oe_grey">
	                 Selected products to update the cost price.
	             </p>
	            
	             <footer>
	                 <button name="update_product_cost" string="Update Product Cost" type="object" class="btn-primary"/>
	                 <button string="Cancel" class="btn-secondary" special="cancel"/>
	             </footer>
	         </form>
	     </field>
	 </record>
	
	 <record id="action_sale_cost_update" model="ir.actions.act_window">
	     <field name="name">Update Product Cost</field>
	     <field name="type">ir.actions.act_window</field>
	     <field name="res_model">product.cost.update</field>
	     <field name="view_mode">form</field>
	     <field name="target">new</field>
	    <field name="binding_model_id" ref="product.model_product_template" />
	    <field name="binding_view_types">list</field>
	</record>
</odoo>
