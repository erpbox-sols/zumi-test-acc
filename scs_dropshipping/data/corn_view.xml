<?xml version="1.0"?>
<odoo>
    <data noupdate="0">
        <!-- Scheduler for update cost price in sale order line-->
        <record id="update_saleorder_cost" model="ir.cron">
            <field name="name">Sale: Update Cost Price</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.auto_update_sale_cost()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
        
        <!-- Scheduler for update cost price in customer invoice line-->
        <record id="update_invoice_cost_price" model="ir.cron">
            <field name="name">Invoice: Update Cost Price</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="state">code</field>
            <field name="code">model.update_cost_price()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>
    </data>
</odoo>