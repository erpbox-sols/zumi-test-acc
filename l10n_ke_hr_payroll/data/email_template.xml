<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payslip_send_by_email" model="mail.template">
            <field name="name">Send By Email Payslip</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="subject"></field>
            <field name="email_from"></field>
            <field name="email_to"></field>
            <field name="use_default_to" eval="True"/>
            <field name="body_html" type="html">
                <div>
                    <p>Dear ${object.employee_id.name},</p>
                    <p>Kindly find your payslip of period ${object.date_from} to ${object.date_to} attached with the email.</p>
                    <br></br>
                    <p>Thank You.</p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
            <field name="user_signature" eval="True"/>
        </record>
    </data>
</odoo>