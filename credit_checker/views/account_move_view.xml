<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- account_move inherit form view -->
    <record id="account_move_form_view_id" model="ir.ui.view">
        <field name="name">account.move.form.inherit.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="is_credit_cutomer"/>
            </field>
        </field>
    </record>

    <!-- account.move inherit tree view -->
    <record id="account_move_tree_view_id" model="ir.ui.view">
        <field name="name">account.move.inherit.view.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="is_credit_cutomer"/>
            </field>
        </field>
    </record>
</odoo>