<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--___________________ Category for Zumi Africa Access Rights______________________ -->

    <record id="module_category_zumi_africa_access_rights" model="ir.module.category">
        <field name="name">Zumi Africa Access</field> 
        <field name="description">Helps you to handle your sales and purchase.</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_zumi_restrict_so_editting" model="res.groups">
        <field name="name">Restrict Editting in Sale Order</field>
        <field name="category_id" ref="module_category_zumi_africa_access_rights"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record> 

    <record id="group_zumi_restrict_invoice_editting" model="res.groups">
        <field name="name">Restrict Editting in Invoices</field>
        <field name="category_id" ref="module_category_zumi_africa_access_rights"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_zumi_restrict_creation_so_po_invoice" model="res.groups">
        <field name="name">Restrict Creation in SO, Invoices &amp; PO</field>
        <field name="category_id" ref="module_category_zumi_africa_access_rights"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record> 

</odoo>
