<odoo>
    <data>
    
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_information']/group/group[@name='sales_person']/field[@name='team_id']" position="before">
                    <field name="x_salesperson" />
                </xpath>

                <xpath expr="//page[@name='other_information']/group/group/field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//page[@name='customer_signature']" position="after">
                    <page name="delivery_details" string="Delivery Details">
                        <group>
                            <group>
                                <field name="in_store"/>
                                <field name="pick_up_type"/>
                            </group>
                            <group>
                                <field name="delivery_failed"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

        <record id="view_order_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="x_salesperson"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        
        <record id="view_order_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="x_salesperson"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    
    </data>
</odoo>