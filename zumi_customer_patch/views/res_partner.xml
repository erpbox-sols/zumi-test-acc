<?xml version="1.0"?>
<odoo>
    <record id="partner_view_market_lat_long" model="ir.ui.view">
        <field name="name">res.partner.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after" editable="top">
                <field name="latitude" />
                <field name="longitude" />
                <field name="market"/>
                <field name="user_name"/>
            </xpath>
        </field>
    </record>
</odoo>
